<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <Button
        android:id="@+id/return_button2"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:background="@drawable/backpic"
        android:gravity="center" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_alignBottom="@+id/config_date"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/return_button2"
        android:background="#8deeee"
        android:text="支出"
        android:gravity="center"
        android:textColor="#cd6090"
        android:textSize="13pt" />

    <TextView
        android:id="@+id/config_date"
        android:layout_width="30dp"
        android:layout_height="70dp"
        android:layout_alignBottom="@+id/return_button2"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView1"
        android:background="#8deeee"
        android:gravity="center"
        android:textColor="#cd6090" />

</RelativeLayout>